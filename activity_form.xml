<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <EditText android:id="@+id/name" android:hint="Name" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/contact" android:hint="Contact" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/city" android:hint="City" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button android:onClick="submitForm" android:text="Submit" android:layout_marginTop="16dp"/>
</LinearLayout>
